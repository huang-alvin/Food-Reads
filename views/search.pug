extends layout

append head
    link(rel="stylesheet" href="/stylesheets/home.css")
block content
    #container
        div.center
            if searchResult.length > 0
                h5 Search Results
                div.new-books
                    each book in searchResult
                        div(class='new-books__item')
                            a(href='/books/'+ book.id)
                                img(class='image' src=book.cover)
            else
                h5 No Results
    include footer.pug

