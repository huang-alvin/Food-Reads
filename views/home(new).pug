extends layout

append head
    //- add page specific styles by appending to the head
    link(rel="stylesheet" href="/stylesheets/home.css")
    //- add page specific js
    //- script(src="/javascripts/index.js" type="module" defer)

block content
    div.left
        .bookshelf
            p.bookshelf__header: a(href='/bookshelf') My Bookshelf
            .bookshelf__default
                ul
                    each bookshelf in bookshelves
                        li: a(href='/bookshelf/' +bookshelf.id) #{bookshelf.status}: #{bookshelf.Books.length}
    div.center
        h5 New Books
        div.new-books
            each book, index in latestBooks
                div(class='new-books__item')
                    a(href='/books/'+ book.id)
                        img(class='image' src=book.cover)
